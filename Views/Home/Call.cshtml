@model Contactus
<div class="container" style="margin-top:25px; margin-bottom:10px;">


    <div class="col-10" >


        <form  asp-action= "Savecontact"   >
            <div class="row">

                <div class="col form-group">
                    <input type="text" asp-for="Name" class="form-control" placeholder="Your Name" required="">
                    <div class="validate"></div>
                </div>

                <div class="col form-group">
                    <div class="col form-group">
                        <input type="email" class="form-control" asp-for="Email" placeholder="Your Email" required="">
                        <div class="validate"></div>

                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="text" class="form-control" asp-for="Subject" placeholder="Subject" required="">
                <div class="validate"></div>
             </div>
            <div class="form-group mt-3">
                <textarea class="form-control"  asp-for="Message" rows="5" placeholder="Message" required="">

</textarea>
                <div class="validate"></div>
            </div>
            @*<div class="my-3">
                <div class="loading">Loading</div>

                <div class="sent-message">Your message has been sent. Thank you!</div>
            </div>*@
            <div style="margin:10px" ><button class="btn btn-success" type="submit">Send Message</button></div>
        </form>
    </div>
</div>



